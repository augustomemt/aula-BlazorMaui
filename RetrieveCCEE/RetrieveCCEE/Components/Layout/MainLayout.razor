@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />



 <MudLayout>
  <MudAppBar Color="Color.Primary">
    
    
    <!-- Botão de menu que controla a sidebar -->
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit"  OnClick="ToggleDrawer" />

    <MudText Typo="Typo.h6">Listar Medidas CCEE</MudText>
  </MudAppBar>

  <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Responsive" Class="pa-2" Color="Color.Default">
    <MudNavMenu>
      <MudNavLink Icon="@Icons.Material.Filled.Home" Href="" Match="NavLinkMatch.All">Home</MudNavLink>
      <MudNavLink Icon="@Icons.Material.Filled.History" Href="counter">System Log</MudNavLink>
      <MudNavLink Icon="@Icons.Material.Filled.Settings" Href="Configuration">Configuration</MudNavLink>
    </MudNavMenu>
  </MudDrawer>

  <MudMainContent>
    @Body
  </MudMainContent>
 </MudLayout>
  


@code {
  private bool _drawerOpen = true;

  private void ToggleDrawer()
  {
    _drawerOpen = !_drawerOpen;
  }
}
